[colors]

background     = #00000000
foreground     = #ABB2BF
foreground-alt = #ABB2BF

[bar/mybar]

bottom = false

fixed-center = true

height = 25
width = 100%
padding-right = 2
padding-left = 2

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = TamzenForPowerline:pixelsize=14
