modules-left = battery wired-network wireless-network
modules-right = memory cpu temperature backlight pulseaudio date
modules-center = bspwm

separator = |

tray-position = right
tray-maxsize = 16

module-margin-left = 1
module-margin-right = 1

[module/bspwm]
type                      = internal/bspwm
label-focused             = 
label-focused-padding     = 2
label-occupied            = 
label-occupied-padding    = 2
label-urgent              = 
label-urgent-padding      = 2
label-empty               = 
label-empty-padding       = 2
pin-workspaces = true

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label = %percentage%%

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume = <label-volume>
label-muted = 婢

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP0

poll-interval = 5

full-at = 99

time-format = %H:%M

label-discharging = %percentage%% %time%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = <label-discharging>
format-full = <label-full>
format-charging = <label-charging>

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label = %percentage%%

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = %gb_used%

[module/date]
type = internal/date
label = %date% %time%
interval = 1.0
date = %d-%m-%Y
time = %I:%M
date-alt = %A, %d %B %Y
time-alt = %I:%M:%S
format = <label>

[module/wired-network]
type = internal/network
interface = enp2s0

[module/wireless-network]
type = internal/network
interface = wlp3s0

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
base-temperature = 20
warn-temperature = 70
format = <label>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = #f00

